<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">
    <com.congda.baselibrary.widget.CommonTitleView
        android:id="@+id/common_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.congda.tianjianxin.widget.ViewPagerTitle
        android:id="@+id/vp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.congda.tianjianxin.widget.EmojiKeyBoard
        android:id="@+id/key_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>